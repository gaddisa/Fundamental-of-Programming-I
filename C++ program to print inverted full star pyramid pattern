//C++ program to display inverted full star pyramid

#include<iostream>
using namespace std;

int main()
{
   int rows, i, j, space;

   cout << "Enter number of rows: ";
   cin >> rows;

   for(i = rows; i >= 1; i--)
   {
      //for loop to put space
      for(space = i; space < rows; space++)
         cout << " ";
      //for loop for displaying star
      for(j = 1; j <= (2 * i - 1); j++)
         cout << "* ";

      cout << "\n";
   }

   return 0;
}
